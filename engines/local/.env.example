# Database configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=arabic_morphophon
DB_USER=arabic_morpho
DB_PASSWORD=dev_password
DB_CONNECTION_STRING=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CONNECTION_STRING=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# API configuration
API_PREFIX=/api
API_TITLE="Arabic NLP Engine API"
API_VERSION="0.1.0"
API_DESCRIPTION="API for Arabic NLP processing and morphological analysis"
API_DEBUG=true

# Security settings
JWT_SECRET=dev_secret_key_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
API_KEY_PREFIX=ARA_DEV
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000","http://127.0.0.1:8000"]

# Email settings (for development using MailHog)
EMAIL_SMTP_HOST=mailhog
EMAIL_SMTP_PORT=1025
EMAIL_SMTP_USER=
EMAIL_SMTP_PASSWORD=
EMAIL_FROM=noreply@arabic-nlp.local
EMAIL_FROM_NAME="Arabic NLP Engine"

# Application features
ENABLE_DOCS=true
ENABLE_METRICS=true
ENABLE_PROFILING=true
ENABLE_CACHE=true

# Development settings
LOG_LEVEL=DEBUG
RELOAD_DIRS=["./backend", "./nlp", "./core"]

# Node settings for frontend
NODE_ENV=development
