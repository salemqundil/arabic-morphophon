# Production Environment Configuration
# For Arabic Morphophonology System

# Environment
ENVIRONMENT=production
LOG_LEVEL=INFO

# Database Configuration
DB_USER=arabic_morphophon_user
DB_PASSWORD=secure_production_password_change_me
DB_NAME=arabic_morphophon
DB_HOST=db
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security Configuration
JWT_SECRET=production_jwt_secret_change_me_to_secure_value
JWT_EXPIRATION=86400  # 24 hours in seconds

# API Configuration
ENABLE_CORS=false
ALLOWED_ORIGINS=https://arabic-morphophon.example.com

# Deployment Configuration
HTTP_PORT=80
HTTPS_PORT=443
API_URL=https://api.arabic-morphophon.example.com/api

# Service Configuration
WAIT_FOR_SERVICES=true
RUN_MIGRATIONS=true
CREATE_INITIAL_DATA=true

# Scaling Configuration
BACKEND_REPLICAS=2
FRONTEND_REPLICAS=2
POSTGRES_MAX_CONNECTIONS=200
REDIS_MAX_MEMORY=1gb

# Resource Limits
BACKEND_CPU_LIMIT=1000m
BACKEND_MEM_LIMIT=1024Mi
FRONTEND_CPU_LIMIT=500m
FRONTEND_MEM_LIMIT=512Mi
DATABASE_CPU_LIMIT=2000m
DATABASE_MEM_LIMIT=4096Mi
REDIS_CPU_LIMIT=500m
REDIS_MEM_LIMIT=1024Mi

# Monitoring Configuration
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
ENABLE_TRACING=true
