    "suprasegmentals": {
      "stress": {
        "rules": [
          "Ultimate syllable if superheavy (CVVC, CVCC)",
          "Penultimate if heavy (CVC, CVV) and ultimate is light",
          "Antepenultimate if last two syllables are light"
        ],
        "notation": "ˈ"
      },
      "length": {
        "phonemic": true,
        "notation": "ː"
      }
    }
  },
  "phonological_processes": {
    "assimilation": {
      "definite_article": {
        "name": "Definite Article Assimilation",
        "description": "The /l/ in the definite article /al/ assimilates to coronal consonants",
        "sun_letters": ["t", "θ", "d", "ð", "r", "z", "s", "ʃ", "sˤ", "dˤ", "tˤ", "ðˤ", "l", "n"],
        "moon_letters": ["b", "dʒ", "ħ", "x", "ʕ", "ɣ", "f", "q", "k", "m", "h", "w", "j"],
        "rule": "/al/ + [+coronal] → /a[+coronal][+coronal]/",
        "examples": [
          {"input": "/al-ʃams/", "output": "/aʃ-ʃams/", "gloss": "the sun"},
          {"input": "/al-kitaːb/", "output": "/al-kitaːb/", "gloss": "the book"}
        ]
      },
      "progressive": {
        "description": "Consonant spreads features forward",
        "examples": [
          {"type": "place", "rule": "/n/ + [labial] → [labial]", "example": "/inbaːt/ → [imbaːt]"}
        ]
      }
    },
    "epenthesis": {
      "vowel_insertion": {
        "description": "Vowel insertion to break consonant clusters",
        "rule": "C₁C₂C₃ → C₁iC₂C₃ (when C₁C₂ forms illegal cluster)",
        "examples": [
          {"input": "/ktb/", "output": "/kitb/", "context": "word_initial"},
          {"input": "/ʔakl/", "output": "/ʔakil/", "context": "final_cluster"}
        ]
      }
    },
    "deletion": {
      "vowel_syncope": {
        "description": "Short vowel deletion in open syllables",
        "rule": "V → ∅ / _CV.CV",
        "examples": [
          {"input": "/kataba/", "output": "/katba/", "context": "rapid_speech"}
        ]
      }
    }
  },
  "syllable_structure": {
    "templates": [
      {"type": "CV", "structure": "C + V", "frequency": 0.35, "example": "/ka/"},
      {"type": "CVC", "structure": "C + V + C", "frequency": 0.25, "example": "/kat/"},
      {"type": "CVV", "structure": "C + Vː", "frequency": 0.20, "example": "/kaː/"},
      {"type": "CVVC", "structure": "C + Vː + C", "frequency": 0.15, "example": "/kaːt/"},
      {"type": "CVCC", "structure": "C + V + CC", "frequency": 0.05, "example": "/katb/"}
    ],
    "constraints": {
      "onset": {
        "required": true,
        "max_consonants": 1,
        "clusters": []
      },
      "nucleus": {
        "required": true,
        "types": ["short_vowel", "long_vowel"],
        "no_schwa": true
      },
      "coda": {
        "optional": true,
        "max_consonants": 2,
        "preferred_clusters": ["st", "nt", "kt", "lb", "rd"]
      }
    },
    "weight": {
      "light": ["CV"],
      "heavy": ["CVC", "CVV"],
      "superheavy": ["CVVC", "CVCC"]
    }
  }
