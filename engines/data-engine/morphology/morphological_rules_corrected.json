{
  "description": "Arabic Morphological Rules - Comprehensive System",
  "version": "3.0.0",
  "last_updated": "2025-07-23",
  "standard": "Classical_Modern_Standard_Arabic",
  "metadata": {
    "source": "Traditional Arabic Grammar (النحو العربي)",
    "references": ["Sibawayh", "Ibn Malik", "Wright's Arabic Grammar"],
    "verification": "Linguistically verified morphological rules",
    "coverage": "Complete morphological system"
  },

  "morphological_categories": {
    "word_classes": {
      "اسم": {
        "english": "noun",
        "description": "Names persons, places, things, concepts",
        "subcategories": ["concrete", "abstract", "proper", "common"],
        "inflection": ["case", "number", "definiteness", "gender"]
      },
      "فعل": {
        "english": "verb",
        "description": "Expresses actions, states, occurrences",
        "subcategories": ["perfect", "imperfect", "imperative"],
        "inflection": ["person", "number", "gender", "mood", "voice"]
      },
      "حرف": {
        "english": "particle",
        "description": "Function words with grammatical meaning",
        "subcategories": ["preposition", "conjunction", "interrogative"],
        "inflection": ["none"]
      }
    },

    "derivational_morphology": {
      "root_patterns": {
        "Form_I": {
          "pattern": "فَعَلَ",
          "template": "C₁aC₂aC₃a",
          "meaning": "basic action",
          "examples": {
            "كَتَبَ": {"root": "كتب", "meaning": "he wrote"},
            "قَرَأَ": {"root": "قرء", "meaning": "he read"},
            "دَرَسَ": {"root": "درس", "meaning": "he studied"}
          }
        },
        "Form_II": {
          "pattern": "فَعَّلَ",
          "template": "C₁aC₂C₂aC₃a",
          "meaning": "intensive/causative",
          "examples": {
            "كَتَّبَ": {"root": "كتب", "meaning": "he made (someone) write"},
            "دَرَّسَ": {"root": "درس", "meaning": "he taught"},
            "قَرَّرَ": {"root": "قرر", "meaning": "he decided"}
          }
        },
        "Form_III": {
          "pattern": "فَاعَلَ",
          "template": "C₁aːC₂aC₃a",
          "meaning": "reciprocal/attempt",
          "examples": {
            "كَاتَبَ": {"root": "كتب", "meaning": "he corresponded"},
            "قَاتَلَ": {"root": "قتل", "meaning": "he fought"},
            "شَارَكَ": {"root": "شرك", "meaning": "he participated"}
          }
        },
        "Form_IV": {
          "pattern": "أَفْعَلَ",
          "template": "ʔaC₁C₂aC₃a",
          "meaning": "causative",
          "examples": {
            "أَكْتَبَ": {"root": "كتب", "meaning": "he dictated"},
            "أَقْرَأَ": {"root": "قرء", "meaning": "he taught reading"},
            "أَدْرَسَ": {"root": "درس", "meaning": "he made study"}
          }
        },
        "Form_V": {
          "pattern": "تَفَعَّلَ",
          "template": "taC₁aC₂C₂aC₃a",
          "meaning": "reflexive of Form II",
          "examples": {
            "تَكَتَّبَ": {"root": "كتب", "meaning": "he became literate"},
            "تَدَرَّسَ": {"root": "درس", "meaning": "he studied gradually"},
            "تَقَرَّرَ": {"root": "قرر", "meaning": "it was decided"}
          }
        },
        "Form_VI": {
          "pattern": "تَفَاعَلَ",
          "template": "taC₁aːC₂aC₃a",
          "meaning": "reciprocal of Form III",
          "examples": {
            "تَكَاتَبَ": {"root": "كتب", "meaning": "they corresponded"},
            "تَقَاتَلَ": {"root": "قتل", "meaning": "they fought each other"},
            "تَشَارَكَ": {"root": "شرك", "meaning": "they shared"}
          }
        },
        "Form_VII": {
          "pattern": "انْفَعَلَ",
          "template": "inC₁aC₂aC₃a",
          "meaning": "passive/reflexive",
          "examples": {
            "انْكَتَبَ": {"root": "كتب", "meaning": "it was written"},
            "انْكَسَرَ": {"root": "كسر", "meaning": "it broke"},
            "انْقَطَعَ": {"root": "قطع", "meaning": "it was cut"}
          }
        },
        "Form_VIII": {
          "pattern": "افْتَعَلَ",
          "template": "iC₁taC₂aC₃a",
          "meaning": "reflexive/middle",
          "examples": {
            "اكْتَتَبَ": {"root": "كتب", "meaning": "he registered"},
            "اجْتَمَعَ": {"root": "جمع", "meaning": "he gathered"},
            "افْتَرَقَ": {"root": "فرق", "meaning": "he separated"}
          }
        },
        "Form_IX": {
          "pattern": "افْعَلَّ",
          "template": "iC₁C₂aC₃C₃a",
          "meaning": "colors/defects",
          "examples": {
            "احْمَرَّ": {"root": "حمر", "meaning": "he became red"},
            "اصْفَرَّ": {"root": "صفر", "meaning": "he became yellow"},
            "اعْوَجَّ": {"root": "عوج", "meaning": "he became crooked"}
          }
        },
        "Form_X": {
          "pattern": "اسْتَفْعَلَ",
          "template": "istaC₁C₂aC₃a",
          "meaning": "seeking/considering",
          "examples": {
            "اسْتَكْتَبَ": {"root": "كتب", "meaning": "he asked to write"},
            "اسْتَقْرَأَ": {"root": "قرء", "meaning": "he sought to read"},
            "اسْتَدْرَسَ": {"root": "درس", "meaning": "he reviewed"}
          }
        }
      },

      "nominal_patterns": {
        "active_participle": {
          "Form_I": {
            "pattern": "فَاعِل",
            "template": "C₁aːC₂iC₃",
            "meaning": "one who does action",
            "examples": ["كَاتِب", "قَارِئ", "دَارِس"]
          }
        },
        "passive_participle": {
          "Form_I": {
            "pattern": "مَفْعُول",
            "template": "maC₁C₂uːC₃",
            "meaning": "one/thing acted upon",
            "examples": ["مَكْتُوب", "مَقْرُوء", "مَدْرُوس"]
          }
        },
        "verbal_nouns": {
          "Form_I": {
            "patterns": ["فِعَالَة", "فَعْل", "فُعُول"],
            "examples": ["كِتَابَة", "قَرْء", "دُرُوس"]
          }
        },
        "instrument_nouns": {
          "patterns": ["مِفْعَال", "مِفْعَل", "مِفْعَلَة"],
          "examples": ["مِكْتَاب", "مِقَصّ", "مِكْنَسَة"]
        },
        "place_nouns": {
          "patterns": ["مَفْعَل", "مَفْعِل"],
          "examples": ["مَكْتَب", "مَسْجِد", "مَدْرَسَة"]
        }
      }
    },

    "inflectional_morphology": {
      "case_system": {
        "nominative": {
          "marker": "ُ",
          "function": "subject, predicate",
          "example": "الكِتَابُ"
        },
        "accusative": {
          "marker": "َ",
          "function": "direct object, adverbial",
          "example": "الكِتَابَ"
        },
        "genitive": {
          "marker": "ِ",
          "function": "possessive, prepositional object",
          "example": "الكِتَابِ"
        }
      },

      "number_system": {
        "singular": {
          "marker": "∅",
          "example": "كِتَاب"
        },
        "dual": {
          "marker": "ان/ين",
          "example": "كِتَابَان/كِتَابَيْن"
        },
        "plural": {
          "sound_masculine": {
            "marker": "ون/ين",
            "example": "مُسْلِمُون/مُسْلِمِين"
          },
          "sound_feminine": {
            "marker": "ات",
            "example": "مُسْلِمَات"
          },
          "broken": {
            "patterns": ["فُعُل", "أَفْعَال", "فِعَال"],
            "examples": ["كُتُب", "أَقْلَام", "رِجَال"]
          }
        }
      },

      "verbal_inflection": {
        "perfect": {
          "3ms": "فَعَلَ",
          "3fs": "فَعَلَتْ",
          "3mp": "فَعَلُوا",
          "3fp": "فَعَلْنَ",
          "2ms": "فَعَلْتَ",
          "2fs": "فَعَلْتِ",
          "2mp": "فَعَلْتُمْ",
          "2fp": "فَعَلْتُنَّ",
          "1s": "فَعَلْتُ",
          "1p": "فَعَلْنَا"
        },
        "imperfect": {
          "indicative": {
            "3ms": "يَفْعَلُ",
            "3fs": "تَفْعَلُ",
            "3mp": "يَفْعَلُونَ",
            "3fp": "يَفْعَلْنَ",
            "2ms": "تَفْعَلُ",
            "2fs": "تَفْعَلِينَ",
            "2mp": "تَفْعَلُونَ",
            "2fp": "تَفْعَلْنَ",
            "1s": "أَفْعَلُ",
            "1p": "نَفْعَلُ"
          }
        }
      }
    }
  },

  "morphophonological_rules": {
    "assimilation": {
      "definite_article": {
        "rule": "ال + [coronal] → [coronal][coronal]",
        "description": "Definite article /l/ assimilates to coronal consonants"
      }
    },
    "epenthesis": {
      "hamza_support": {
        "rule": "ʔ → [vowel]ʔ / #_",
        "description": "Word-initial hamza requires vowel support"
      }
    },
    "weak_radical_rules": {
      "hollow_verbs": {
        "description": "Verbs with w/y as middle radical",
        "rule": "CwC → CaaC / _perfect",
        "examples": ["قَوَلَ → قَالَ", "بَيَعَ → بَاعَ"]
      }
    }
  }
}
