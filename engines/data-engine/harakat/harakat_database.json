  "morphophonological_rules": {
    "harakat_conditioning": {
      "vowel_harmony": {
        "description": "Vowel harmony in certain morphological contexts",
        "rules": [
          {
            "condition": "Form II pattern",
            "rule": "CaCCaC → CuCCiC in passive",
            "example": {"active": "كَتَّبَ", "passive": "كُتِّبَ"}
          }
        ]
      },
      "stress_conditioned_reduction": {
        "description": "Vowel reduction in unstressed syllables",
        "rules": [
          {
            "condition": "unstressed_short_vowel",
            "rule": "V → ∅ / unstressed",
            "example": {"full": "كَتَبَ", "reduced": "كِتَب"}
          }
        ]
      }
    },

    "case_mood_marking": {
      "nominal_case": {
        "nominative": {
          "definite": "ُ",
          "indefinite": "ٌ",
          "examples": ["الكِتَابُ", "كِتَابٌ"]
        },
        "accusative": {
          "definite": "َ",
          "indefinite": "ً",
          "examples": ["الكِتَابَ", "كِتَابًا"]
        },
        "genitive": {
          "definite": "ِ",
          "indefinite": "ٍ",
          "examples": ["الكِتَابِ", "كِتَابٍ"]
        }
      },
      "verbal_mood": {
        "indicative": {
          "marker": "ُ",
          "example": "يَكْتُبُ"
        },
        "subjunctive": {
          "marker": "َ",
          "example": "أَنْ يَكْتُبَ"
        },
        "jussive": {
          "marker": "ْ",
          "example": "لَمْ يَكْتُبْ"
        }
      }
    }
  },

  "syllable_interaction": {
    "weight_calculation": {
      "light_syllables": {
        "structure": "CV",
        "harakat_pattern": "C + short_vowel",
        "mora_count": 1,
        "examples": ["كَ", "تَ", "بَ"]
      },
      "heavy_syllables": {
        "structures": ["CVC", "CVV"],
        "harakat_patterns": [
          "C + short_vowel + C",
          "C + long_vowel"
        ],
        "mora_count": 2,
        "examples": ["كَتْ", "كَا", "تُو"]
      },
      "superheavy_syllables": {
        "structures": ["CVVC", "CVCC"],
        "harakat_patterns": [
          "C + long_vowel + C",
          "C + short_vowel + CC"
        ],
        "mora_count": 3,
        "examples": ["كَاتْ", "كَتْبْ"]
      }
    },

    "stress_assignment": {
      "primary_stress_rules": [
        {
          "rule": "Final superheavy attracts stress",
          "pattern": "...CVVC#",
          "example": "كِتَاب → ki.ˈtaːb"
        },
        {
          "rule": "Penultimate heavy if final is light",
          "pattern": "...CVC.CV#",
          "example": "كَاتِب → ˈkaː.tib"
        },
        {
          "rule": "Antepenultimate if last two are light",
          "pattern": "...CV.CV.CV#",
          "example": "مَدْرَسَة → ˈmad.ra.sa"
        }
      ]
    }
  },

